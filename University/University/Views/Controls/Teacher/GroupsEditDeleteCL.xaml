<UserControl x:Class="University.Views.Controls.Teacher.GroupsEditDeleteCL"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:University.Views.Controls.Teacher"
                mc:Ignorable="d" 
             Background="Transparent"
             Height="500"
             Width="550">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
                BorderThickness="1"
                Opacity="1">

            <Grid Name="Main">
                <Grid x:Name="UpDowmManu" Grid.Row="0" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Top"
                      Width="550">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="250" Margin="5,0,5,0" Height="40">
                        <Border BorderBrush="white"
                                BorderThickness="1"
                                CornerRadius="15">
                            <TextBox x:Name="txtSearch"
                                    Height="30"
                                    FontSize="20"
                                    FontWeight="Medium"
                                    Foreground="#E0E1F1"
                                    FontFamily="Montserrat"
                                    BorderBrush="Transparent" 
                                    Background="Transparent"
                                    VerticalContentAlignment="Center"
                                    Padding="10,0,10,0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Text="{Binding Search}"/>
                        </Border>
                    </Grid>

                    <Button Grid.Column="2" Style="{StaticResource addButton}" 
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right" 
                            Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Impot new"/>
                        </StackPanel>
                    </Button>
                </Grid>


                <Grid Name="DataView" Grid.Row="1" Margin="0,35,0,0">
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                              CellStyle="{DynamicResource DataGridCellStyle1}" 
                              x:Name="groupsDataGrid" 
                              Style="{DynamicResource DataGridStyle1}"
                              ItemsSource="{Binding Groups}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="GroupName" IsReadOnly="True" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="Auto" Height="25" 
                                                    CornerRadius="20" 
                                                    Margin="0 0 10 0" 
                                                    Background="{Binding BgColor}">
                                                <TextBlock Text="{Binding GroupName}" 
                                                            Foreground="White"
                                                             FontSize="20" 
                                                             FontWeight="Medium" 
                                                             FontFamily="Montserrat" 
                                                             HorizontalAlignment="Left"/>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Operations" IsReadOnly="True" Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{StaticResource gridEditButton}">
                                                <Image Source="/src/Images/edit-icon.png"
                                                       Stretch="UniformToFill"
                                                       Width="20" 
                                                       Height="20"/>
                                            </Button>
                                            <Button Margin="10 0 0 0" Style="{StaticResource gridRemoveButton}">
                                                <Image Source="/src/Images/garbage-icon.png"
                                                        Stretch="UniformToFill"
                                                        Width="20" Height="20"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</UserControl>
