<UserControl x:Class="University.Views.Controls.Teacher.GroupsEditDeleteCL"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:University.Views.Controls.Teacher"
                mc:Ignorable="d" 
             Background="Transparent"
             Height="500"
             Width="550">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
                BorderThickness="1"
                Opacity="1">

            <Grid Name="Main">
                <Grid x:Name="UpDowmManu" Grid.Row="0" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top"
                      Width="300" 
                      Margin="0,0,5,0">

                    <Border BorderBrush="white"
                            BorderThickness="1"
                            CornerRadius="15">
                        <Grid Grid.Column="0" Width="300" Margin="5,0,5,0">
                            <TextBox x:Name="txtSearch"
                                    Height="30"
                                    FontSize="20"
                                    FontWeight="Medium"
                                    Foreground="#E0E1F1"
                                    FontFamily="Montserrat"
                                    BorderBrush="Transparent" 
                                    Background="Transparent"
                                    VerticalContentAlignment="Center"
                                    Padding="20,0,0,0"
                                    BorderThickness="0"
                                    Margin="0,0,0,0"
                                    Cursor="Hand"
                                    Text="{Binding Search}"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Name="DataView" Grid.Row="1" Margin="0,35,0,0">
                    
                    
                    
                   
                </Grid>
            </Grid>
        </Border>
    </Border>
</UserControl>
