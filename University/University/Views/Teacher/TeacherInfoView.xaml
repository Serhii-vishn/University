<Window x:Class="University.Views.TeacherInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:University.Views"
        Height="550" Width="550"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="12">
        <Border CornerRadius="10"
            BorderThickness="1"
            Opacity="1">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.7"/>
                    <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1.5"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1.4,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0.1"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="0.9"/>
                    <GradientStop Color="{StaticResource winBorderColor4}" Offset="1.2"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="470"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Name="UpButtons" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnClose"
                             BorderThickness="0"
                             Content="x"
                             Foreground="White"
                             FontSize="14" 
                             FontFamily="Montserrat"
                             Cursor="Hand"
                             Grid.Column="2"
                             Click="BtnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource buttomColor4}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource buttomColor3}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20"
                                         CornerRadius="10"
                                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <Grid Name="DataInput" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Name"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,0,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250" 
                                    Margin="0,10,0,0">
                                <TextBox x:Name="txtFirstName"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         Opacity="0.4"
                                         BorderBrush="Transparent"
                                         Height="28"
                                         Width="250"
                                         VerticalContentAlignment="Top"
                                         HorizontalAlignment="Center"
                                         BorderThickness="0,0,0,0"
                                         Padding="5,5,0,0"
                                         Grid.Row="1"
                                         Text="{Binding FirstName}"/>
                            </Border>

                            <TextBlock Text="Surname"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,10,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250" 
                                    Margin="0,10,0,0">
                                <TextBox x:Name="txtLastName"
                                        FontSize="12"
                                        FontWeight="Medium"
                                        FontFamily="Montserrat"
                                        Foreground="Black"
                                        Opacity="0.4"
                                        BorderBrush="Transparent"
                                        Height="28"
                                        Width="250"
                                        VerticalContentAlignment="Top"
                                        HorizontalAlignment="Center"
                                        BorderThickness="0,0,0,0"
                                        Padding="5,5,0,0"
                                        Grid.Row="1"
                                        Text="{Binding LastName}"/>
                            </Border>

                            <TextBlock Text="Date of birth"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,10,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250"
                                    Height="28"
                                    Margin="0,10,0,0"
                                    Background="White"
                                    Opacity="0.4">
                                <DatePicker SelectedDate="{Binding DateOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            DisplayDateStart="{Binding StartDate}"
                                            DisplayDateEnd="{Binding CurrentDate}"
                                            Margin="0,2,0,0"
                                            Height="25"
                                            Width="230"
                                            FontSize="12"
                                            FontWeight="Medium"
                                            FontFamily="Montserrat"
                                            Foreground="Black"                          
                                            BorderBrush="Transparent"
                                            VerticalContentAlignment="Top"
                                            HorizontalAlignment="Center"            
                                            BorderThickness="0,0,0,0"
                                            Grid.Row="1"/>
                            </Border>

                            <TextBlock Text="Position"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,15,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250" 
                                    Margin="0,10,0,0">
                                <TextBox x:Name="txtPosition"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         Opacity="0.4"
                                         BorderBrush="Transparent"
                                         Height="28"
                                         Width="250"
                                         VerticalContentAlignment="Top"
                                         HorizontalAlignment="Center"
                                         BorderThickness="0,0,0,0"
                                         Padding="5,5,0,0"
                                         Grid.Row="1"
                                         Text="{Binding Position}"/>
                            </Border>

                            <TextBlock Text="Academic degreee"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,10,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250" 
                                    Margin="0,10,0,0">
                                <TextBox x:Name="txtAcademicDegreee"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         Opacity="0.4"
                                         BorderBrush="Transparent"
                                         Height="28"
                                         Width="250"
                                         VerticalContentAlignment="Top"
                                         HorizontalAlignment="Center"
                                         BorderThickness="0,0,0,0"
                                         Padding="5,5,0,0"
                                         Grid.Row="1"
                                         Text="{Binding AcademicDegreee}"/>
                            </Border>

                            <TextBlock Text="Curriculums"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,12,0,0"/>

                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Margin="0,10,0,0"
                                    Background="Transparent"
                                    Height="90"
                                    Width="250">
                                <ListBox x:Name="cmbCurriculums"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         BorderBrush="Transparent"
                                         BorderThickness="0,0,0,0"
                                         VerticalContentAlignment="Center"
                                         Opacity="0.4" 
                                         ItemsSource="{Binding Curriculumc}" 
                                         SelectionMode="Extended">

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="1" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Address"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,0,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250" 
                                    Margin="0,10,0,0">
                                <TextBox x:Name="txtAddress"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         Opacity="0.4"
                                         BorderBrush="Transparent"
                                         Height="28"
                                         Width="250"
                                         VerticalContentAlignment="Top"
                                         HorizontalAlignment="Center"
                                         BorderThickness="0,0,0,0"
                                         Padding="5,5,0,0"
                                         Grid.Row="1"
                                         Text="{Binding Address}"/>
                            </Border>

                            <TextBlock Text="Gender"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,10,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250" 
                                    Margin="0,10,0,0">
                                <TextBox x:Name="txtGender"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         Opacity="0.4"
                                         BorderBrush="Transparent"
                                         Height="28"
                                         Width="250"
                                         VerticalContentAlignment="Top"
                                         HorizontalAlignment="Center"
                                         BorderThickness="0,0,0,0"
                                         Padding="5,5,0,0"
                                         Grid.Row="1"
                                         Text="{Binding Gender}"/>
                            </Border>

                            <TextBlock Text="E-mail"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,10,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250" 
                                    Margin="0,10,0,0">
                                <TextBox x:Name="txtEmail"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         Opacity="0.4"
                                         BorderBrush="Transparent"
                                         Height="28"
                                         Width="250"
                                         VerticalContentAlignment="Top"
                                         HorizontalAlignment="Center"
                                         BorderThickness="0,0,0,0"
                                         Padding="5,5,0,0"
                                         Grid.Row="1"
                                         Text="{Binding Email}"/>
                            </Border>

                            <TextBlock Text="Phone"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,12,0,0"/>
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5"
                                    Width="250" 
                                    Margin="0,10,0,0">
                                <TextBox x:Name="txtPhone"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         Opacity="0.4"
                                         BorderBrush="Transparent"
                                         Height="28"
                                         Width="250"
                                         VerticalContentAlignment="Top"
                                         HorizontalAlignment="Center"
                                         BorderThickness="0,0,0,0"
                                         Padding="5,5,0,0"
                                         Grid.Row="1"
                                         Text="{Binding Phone}"/>
                            </Border>

                            <TextBlock Text="Groups"
                                       Foreground="#dfebf2"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       Margin="20,80,0,0"/>
                            
                            <Border BorderBrush="#dfebf2" 
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Margin="0,10,0,0"
                                    Background="Transparent"
                                    Height="90"
                                    Width="250">
                                <ListBox x:Name="cmbGroups"
                                         FontSize="12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"
                                         Foreground="Black"
                                         BorderBrush="Transparent"
                                         BorderThickness="0,0,0,0"
                                         VerticalContentAlignment="Center"
                                         Opacity="0.4" 
                                         ItemsSource="{Binding Groups}" 
                                         SelectionMode="Extended">
                                    
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding GroupName}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Name="save" Grid.Row="2">
                    <Button x:Name="btnAddStudent"                          
                            BorderThickness="0"
                            Content="UPDATE"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"                           
                            Margin="0,0,0,0"
                            Command="{Binding SaveChangesCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource buttomColor3}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource buttomColor1}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
